---
import Layout from "../layouts/Layout.astro";
import Redirects from "../pages/redirects.astro";
const res = await fetch('https://api.github.com/users/tarfish/repos');
const repos = await res.json();
---

<header>my projects!</header>

<Layout title="projects">
</Layout>

<div class="mt-12 mx-5 gap-8">
	<div class="p-12 py-4 bg-[#fdfa72] border-4 border-[#FF8C00] rounded-lg justify-center items-center flex flex-col text-xl">
		<Redirects />
	</div>
	<br>
	<div class="p-12 py-4 bg-[#fdfa72] border-4 border-[#FF8C00] rounded-lg justify-center flex flex-col text-xl">
		{repos.map((repo) => (
			<div class="mb-6">
				<h2 class="text-2xl font-bold"><a href={repo.html_url} target="_blank">{repo.name}</a></h2>
				<p class="mt-2">{repo.description}</p>
			</div>
		))}
	</div>
</div>

<footer class="text-center">made with <3 by sarvesh! <a href="https://github.com/tarfish/personal-site" target="_blank">(repo)</a></footer>